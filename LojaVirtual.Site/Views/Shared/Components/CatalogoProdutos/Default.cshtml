@model CatalogoProdutosViewModel

@if (ViewBag.Mensagem is not null)
{
    <div class="alert alert-danger mt-3" role="alert">@ViewBag.Mensagem</div>
}
else
{
    if (Model is null || Model.Produtos.Count <= 0)
    {
        <div class="alert alert-info mt-3" role="alert">Que pena, não há produtos para exibir.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4">
            @foreach (var item in Model.Produtos)
            {
                <div class="col mt-3">
                    <div class="card h-100">
                        <div style="transform: rotate(0);">
                            <a class="stretched-link" asp-area="" asp-controller="Produto" asp-action="Detalhes" asp-route-id="@item.Id"></a>
                            <img src="@item.Imagens.FirstOrDefault()" class="card-img-top object-fit-cover" alt="@item.Imagens.FirstOrDefault()" style="height: 300px;">
                        </div>
                        <div class="card-body" style="transform: rotate(0);">
                            <a class="stretched-link" asp-area="" asp-controller="Produto" asp-action="Detalhes" asp-route-id="@item.Id"></a>
                            <h2 class="card-title">@item.Nome</h2>
                            <p class="card-text" style="text-align: justify;">@(item.Descricao.Length < 150 ? item.Descricao : item.Descricao.Substring(0, 150) + "...")</p>
                        </div>
                        <div class="card-footer px-2 pb-lg-1">
                            <div class="row">
                                <div class="col-9 pe-0 mt-1 mt-sm-0">
                                    <span class="fs-2">@item.Preco.ToString("C")</span>
                                </div>
                                <div class="col-3 ps-0 text-end">
                                    <a href="#" class="btn btn-outline-primary fs-5"><i class="fa-solid fa-cart-plus"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.TotalPaginas > 1)
        {
            <div class="mt-4 ">
                <nav>
                    <ul class="pagination justify-content-center">
                        @{
                            if (Model.PaginaAnterior > 0)
                            {
                                <li class="page-item"><button class="page-link text-secondary paginaAnterior"><i class="fa-solid fa-caret-left"></i></button></li>

                                if (Model.PaginaAtual - 2 > 0)
                                {
                                    <li class="page-item"><button class="page-link text-secondary pagina">@(Model.PaginaAtual - 2)</button></li>
                                }

                                <li class="page-item"><button class="page-link text-secondary pagina">@Model.PaginaAnterior</button></li>
                            }

                            <li class="page-item"><button class="page-link text-primary paginaAtual fw-bold">@Model.PaginaAtual</button></li>

                            if (Model.PaginaProxima > 0)
                            {
                                <li class="page-item"><button class="page-link text-secondary pagina">@Model.PaginaProxima</button></li>

                                if (Model.PaginaAtual + 2 <= Model.TotalPaginas)
                                {
                                    <li class="page-item"><button class="page-link text-secondary pagina">@(Model.PaginaAtual + 2)</button></li>
                                }

                                <li class="page-item"><button class="page-link text-secondary paginaProxima"><i class="fa-solid fa-caret-right"></i></button></li>
                            }
                        }
                    </ul>
                </nav>
            </div>
        }
    }
}
