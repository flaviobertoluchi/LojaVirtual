@model ClienteViewModel
@{
    ViewBag.Title = "- Conta";
}

<div class="container mt-4">

    <div class="row justify-content-center">
        <div class="col p-3 rounded shadow bg-body">
            <div class="row">
                <div class="col-sm-3">
                    <partial name="_ContaPartial" />
                </div>
                <div class="col-sm-9">

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label"></label>
                        <input asp-for="Nome" disabled class="form-control">
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Sobrenome" class="form-label"></label>
                        <input asp-for="Sobrenome" disabled class="form-control">
                        <span asp-validation-for="Sobrenome" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Cpf" class="form-label"></label>
                        <input asp-for="Cpf" disabled class="form-control cpfBR">
                        <span asp-validation-for="Cpf" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Usuario" class="form-label"></label>
                        <input asp-for="Usuario" disabled class="form-control">
                        <span asp-validation-for="Usuario" class="text-danger"></span>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
