@model ICollection<TelefoneViewModel>
@{
    ViewBag.Title = "- Conta - Telefones";
}

<div class="container mt-4">

    <div class="row justify-content-center">
        <div class="col p-3 rounded shadow bg-body">
            <div class="row">
                <div class="col-sm-3">
                    <partial name="_ContaPartial" />
                </div>
                <div class="col-sm-9">

                    <div class="row mb-3">


                        <div class="col-md">

                            <h4 class="mb-3">Telefones</h4>

                            <form method="post">

                                @if (ViewBag.Mensagem is not null)
                                {
                                    <div class="alert alert-danger" role="alert">@ViewBag.Mensagem</div>
                                }

                                @if (TempData["Sucesso"] is not null)
                                {
                                    <div class="alert alert-success" role="alert">@TempData["Sucesso"]</div>
                                }

                                <div class="table-responsive">
                                    <table class="table table-hover">

                                        <thead>
                                            <tr>
                                                <th scope="col">@Html.DisplayName("Telefone")</th>
                                                <th scope="col" class="text-end">
                                                    <a class="btn btn-outline-primary" style="min-width: 42px;" asp-area="" asp-controller="Cliente" asp-action="ContaTelefoneAdicionar">
                                                        <i class="fa-solid fa-square-plus"></i>
                                                    </a>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody class="table-group-divider">

                                            @if (Model?.Count > 0)
                                            {
                                                foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@item.Numero</td>
                                                        <td class="text-end">
                                                            <a class="btn btn-outline-secondary" style="min-width: 42px;" asp-area="" asp-controller="Cliente" asp-action="ContaTelefoneEditar" asp-route-id="@item.Id">
                                                                <i class="fa-solid fa-pen-to-square"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            }

                                        </tbody>
                                    </table>
                                </div>

                            </form>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
