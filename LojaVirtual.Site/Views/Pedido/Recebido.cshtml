@model int

@{
    ViewBag.Title = "- Pedido recebido";
}

@if (Model > 0)
{
    <div class="container mt-4">

        <div class="row justify-content-center">

            <div class="col p-3 rounded shadow bg-body text-center">

                <h1>Pedido número @Model recebido com sucesso!</h1>

                <p>Clique no link abaixo para efetuar o pagamento</p>

                <a href="#" class="btn btn-outline-success">Gateway de pagamento</a>

                <br />

                <br />

                <p>Você pode acompanhar o andamento do pedido na sua conta clicando <a asp-area="" asp-controller="Cliente" asp-action="Index">aqui</a>.</p>

                <h2>Obrigado!</h2>

            </div>

        </div>

    </div>
}
