@model Produto

@{
    ViewBag.Title = "Produto detalhes";
}

@if (Model is not null)
{
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col p-3 rounded shadow bg-body">
                <div class="row">

                    <div class="col-lg">

                        <img src="@Model.Imagens.FirstOrDefault()" alt="@Model.Imagens.FirstOrDefault()" class="w-100 rounded object-fit-cover" style="height: 500px;" />

                        <div class="row row-cols-4 row-cols-sm-5 row-cols-md-6 row-cols-lg-5 row-cols-xl-6">
                            @foreach (var item in Model.Imagens)
                            {
                                <div class="col mt-2">
                                    <img src="@item" alt="@item" class="w-100 rounded object-fit-cover" style="height: 80px; width: 80px;" />
                                </div>
                            }
                        </div>

                    </div>

                    <div class="card border-0 col-lg mt-4 mt-lg-0">
                        <h1 class="border-bottom pb-3">@Model.Nome</h1>
                        <div class="card-body border-bottom px-0">
                            <p style="text-align: justify;">@Model.Descricao</p>
                        </div>
                        <form>
                            <div class="row card-footer p-0 border-0 bg-transparent">
                                <span class="h1 col-12 mt-2 align-text-bottom" style="text-align: end;">@Model.Preco.ToString("C")<small class="h6">/UN</small></span>
                                <div class="col-12 mt-2">
                                    <div class="row">
                                        <dvi class="col offset-sm-6 col-sm-4 offset-md-7 col-md-3 offset-lg-6 col-lg-4 offset-xl-7 col-xl-3">
                                            <div class="row">
                                                <span style="text-align: center;">quantidade</span>
                                                <div class="input-group justify-content-center">
                                                    <a href="#" class="input-group-text btn">-</a>
                                                    <input class="input-group-text border-0 bg-transparent" style="width: 50px;" value="1" />
                                                    <a href="#" class="input-group-text btn">+</a>
                                                </div>
                                            </div>
                                        </dvi>
                                        <div class="col col-sm-2">
                                            <button type="submit" class="btn btn-outline-primary float-end" style="height: 60px;">
                                                <i class="fa-solid fa-cart-plus"></i>
                                                <p>Comprar</p>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
}
