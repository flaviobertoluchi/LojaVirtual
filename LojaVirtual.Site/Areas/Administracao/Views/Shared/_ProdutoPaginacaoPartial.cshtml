@inject LojaVirtual.Site.Extensions.Sessao sessao
@{
    var colaboradorToken = sessao.ObterColaboradorToken();
}

@model Paginacao<ProdutoViewModel>

@if (colaboradorToken is not null && colaboradorToken.Permissao.VisualizarProduto)
{
    <div class="table-responsive">
        <table class="table table-hover">

            <thead>
                <tr>
                    <th scope="col">@Html.DisplayName(nameof(ProdutoViewModel.Id))</th>
                    <th scope="col">@Html.DisplayName(nameof(ProdutoViewModel.Categoria))</th>
                    <th scope="col">@Html.DisplayName(nameof(ProdutoViewModel.Nome))</th>
                    <th scope="col">@Html.DisplayName(nameof(ProdutoViewModel.Estoque))</th>
                    <th scope="col">@Html.DisplayName("Preço")</th>
                    <th scope="col" class="text-end">
                        @if (colaboradorToken.Permissao.AdicionarProduto)
                        {
                            <a class="btn btn-outline-primary" style="min-width: 42px;" asp-area="Administracao" asp-controller="Produto" asp-action="Adicionar">
                                <i class="fa-solid fa-square-plus"></i>
                            </a>
                        }
                    </th>
                </tr>
            </thead>
            <tbody class="table-group-divider">

                @if (Model?.Data.Count > 0)
                {
                    foreach (var item in Model.Data)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Categoria?.Nome</td>
                            <td>@item.Nome</td>
                            <td>@item.Estoque</td>
                            <td class="preco">@item.Preco.ToString("C")</td>
                            <td class="text-end">
                                <a class="btn btn-outline-secondary" style="min-width: 42px;" asp-area="Administracao" asp-controller="Produto" asp-action="Editar" asp-route-id="@item.Id">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>

    <partial name="_PaginacaoPartial" />

}
