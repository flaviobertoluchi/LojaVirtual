@model Pedido

@{
    ViewBag.Title = "- Editar";
}

@if (Model is not null)
{
    <div class="container mt-4">

        <div class="row justify-content-center">
            <div class="col p-3 rounded shadow bg-body">

                @if (TempData["Sucesso"] is not null)
                {
                    <div class="alert alert-success" role="alert">@TempData["Sucesso"]</div>
                }

                @if (TempData["Mensagem"] is not null)
                {
                    <div class="alert alert-danger" role="alert">@TempData["Mensagem"]</div>
                }

                @if (ViewBag.Mensagem is not null)
                {
                    <div class="alert alert-danger" role="alert">@ViewBag.Mensagem</div>
                }

                <div class="row">

                    <div class="col-md-12 mb-4">
                        <div class="row">
                            <div class="col-8 col-sm-9">
                                <span class="h3">Pedido: @Model.Id - @Model.SituacoesPedido.OrderByDescending(x => x.Id).FirstOrDefault()?.TipoSituacaoPedido.DisplayName()</span>
                            </div>
                            <div class="col-4 col-sm-3">
                                <a class="btn btn-outline-secondary float-end" asp-area="Administracao" asp-controller="Pedido" asp-action="Index">
                                    <i class="fa-solid fa-square-up-right"></i> Voltar
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="mb-1">
                            <span class="h4">Andamento</span>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover">

                                <thead>
                                    <tr>
                                        <th scope="col">Situação</th>
                                        <th scope="col">Data</th>
                                        <th scope="col">Mensagem</th>
                                        <th scope="col" class="text-end">
                                            <a class="btn btn-outline-primary" style="min-width: 42px;" data-bs-toggle="modal" data-bs-target="#situacaoModal">
                                                <i class="fa-solid fa-square-plus"></i>
                                            </a>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="table-group-divider">
                                    @foreach (var item in Model.SituacoesPedido.OrderByDescending(x => x.Id))
                                    {
                                        <tr>
                                            <th scope="row">@item.TipoSituacaoPedido</th>
                                            <td>@item.Data</td>
                                            <td>@item.Mensagem</td>
                                            <td></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="col-md-6">

                        <div class="mb-3">
                            <span class="h4">Itens</span>
                        </div>

                        @foreach (var item in Model.PedidoItens)
                        {
                            <div class="row border-top py-1">

                                <div class="col-2">
                                    <img src="/img/produtos/@item.ProdutoId/@item.Imagem" alt="/img/produtos/@item.ProdutoId/@item.Imagem" class="w-100 object-fit-contain rounded" style="width: 50px; height:50px;" />
                                </div>

                                <div class="col-6">
                                    <p class="h6">@item.Nome</p>
                                    <span>@item.Quantidade x @item.Preco.ToString("C")</span>
                                </div>

                                <div class="col-4 text-end">
                                    <p class="h6">Total</p>
                                    <span class="h6">@item.Total.ToString("C")</span>
                                </div>

                            </div>
                        }

                        <div class="row border-top py-3">

                            <div class="col text-end">
                                <p class="h5">Total itens</p>
                                <p class="h5">@Model.ValorTotal.ToString("C")</p>
                                @if (Model.QuantidadeItens == 1)
                                {
                                    <span>(@Model.QuantidadeItens item)</span>
                                }
                                else
                                {
                                    <span>(@Model.QuantidadeItens itens)</span>
                                }
                            </div>

                        </div>

                    </div>

                    <div class="col-md-6">

                        <div class="mb-3">
                            <span class="h4">Entrega</span>
                        </div>
                        <div class="mb-3">
                            <span class="fw-bold">Telefone de contato:</span> @Model.Cliente.Telefone
                            <br />
                            <span class="fw-bold">E-mail de contato:</span> @Model.Cliente.Email
                            <br />
                            <span class="fw-bold">Endereço de entrega:</span> @Model.Cliente.EnderecoNome
                            <br />
                            <span>CEP: @Model.Cliente.Cep</span>
                            <br />
                            <span>Logradouro: @Model.Cliente.Logradouro</span>
                            <br />
                            <span>Número: @Model.Cliente.EnderecoNumero</span>
                            <br />
                            <span>Complemento: @Model.Cliente.Complemento</span>
                            <br />
                            <span>Cidade: @Model.Cliente.Cidade</span>
                            <br />
                            <span>Bairro: @Model.Cliente.Bairro</span>
                            <br />
                            <span>UF: @Model.Cliente.Uf</span>
                        </div>

                        <div class="mb-3">
                            <span class="h4">Resumo</span>
                        </div>
                        <div class="mb-3">
                            <span class="fw-bold">Situação:</span> @Model.SituacoesPedido.OrderByDescending(x => x.Id).FirstOrDefault()?.TipoSituacaoPedido.DisplayName()
                            <br />
                            <span class="fw-bold">Forma de pagamento:</span> @Model.TipoPagamento.DisplayName()
                            <br />
                            <span class="fw-bold">Valor Total:</span> @Model.ValorTotal.ToString("C")
                            <br />
                            <span class="fw-bold">Data da compra:</span> @Model.SituacoesPedido.OrderBy(x => x.Id).FirstOrDefault()?.Data
                            <br />
                            <span class="fw-bold">Última atualização:</span> @Model.SituacoesPedido.OrderByDescending(x => x.Id).FirstOrDefault()?.Data
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

    <div id="situacaoModal" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post">
                    <div class="modal-header bg-primary">
                        <h5 class="modal-title h5">Adicionar situação</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">

                        <input hidden readonly name="pedidoid" value="@Model.Id" />

                        <div class="mb-3">
                            <select class="form-select" id="tiposituacaopedido" name="tiposituacaopedido">
                                <option value="" selected disabled>Situação</option>
                                <option value="1">Aprovado</option>
                                <option value="2">Enviado</option>
                                <option value="3">Entregue</option>
                                <option value="4">Finalizado</option>
                                <option value="5" class="text-danger">Cancelado</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="mensagem" class="form-label"></label>
                            <textarea id="mensagem" name="mensagem" class="form-control" maxlength="500"></textarea>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-outline-primary" asp-area="Administracao" asp-controller="Pedido" asp-action="AdicionarSituacao">
                            <i class="fa-solid fa-floppy-disk"></i> Adicionar
                        </button>
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                            <i class="fa-solid fa-xmark"></i> Fechar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

}

@section Scripts
{
    <script src="~/js/areas/administracao/pedido/editar.js"></script>
}
