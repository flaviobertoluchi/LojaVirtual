@inject LojaVirtual.Site.Extensions.Sessao sessao
@{
    var colaboradorToken = sessao.ObterColaboradorToken();
}

@model Paginacao<Pedido>

@{
    ViewBag.Title = "- Pedidos";
}

@if (colaboradorToken is not null && colaboradorToken.Permissao.VisualizarPedido)
{
    <div class="container mt-4">
        <div class="row">
            <div class="col p-3 rounded shadow bg-body">

                <h4>Pedidos</h4>

                @if (TempData["Sucesso"] is not null)
                {
                    <div class="alert alert-success mt-4" role="alert">@TempData["Sucesso"]</div>
                }

                <div class="row mt-4 justify-content-center">
                    <div class="col-sm-6 col-lg mb-2">
                        <form>
                            <div class="input-group">
                                <input class="form-control pesquisa" type="search" placeholder="Pesquisar pedido">
                                <button class="btn btn-outline-success btn-pesquisar"><i class="fa-solid fa-magnifying-glass"></i></button>
                            </div>
                        </form>

                    </div>

                    <div class="col-sm-6 col-lg mb-2">
                        <form>
                            <div class="input-group">
                                <input class="form-control cpfBR pesquisaCpf" type="search" placeholder="Pesquisar CPF">
                                <button class="btn btn-outline-info btn-pesquisar"><i class="fa-solid fa-magnifying-glass"></i></button>
                            </div>
                        </form>
                    </div>

                    <div class="col-sm-6 col-lg mb-2">
                        <input class="form-control qtdPorPagina" placeholder="Quantidade por página">
                    </div>

                    <div class="col-sm-6 col-lg mb-2">
                        <select class="form-select ordem">
                            <option value="" selected disabled>Ordenar por</option>
                            <option value="0">Id</option>
                            <option value="1">Quantidade de itens</option>
                            <option value="2">Valor total</option>
                            <option value="3">Data da compra</option>
                        </select>
                    </div>
                </div>

                <div class="row justify-content-center">

                    <div class="col-sm-6 col-lg-3 mb-2">
                        <label class="form-check-label" for="dataCompraInicial">Data da compra inicial</label>
                        <input class="form-control dataCompraInicial" type="datetime-local" id="dataCompraInicial">
                    </div>

                    <div class="col-sm-6 col-lg-3 mb-2">
                        <label class="form-check-label" for="dataCompraFinal">Data da compra final</label>
                        <input class="form-control dataCompraFinal" type="datetime-local" id="dataCompraFinal">
                    </div>

                    <div class="col-sm-2 mt-2 mt-lg-4 mb-2">
                        <div class="form-check form-switch">
                            <input class="form-check-input desc" type="checkbox" id="desc">
                            <label class="form-check-label" for="desc">Inverter</label>
                        </div>
                    </div>

                </div>

                <div class="paginacao">
                    @{
                        await Html.RenderPartialAsync("_PedidoPaginacaoPartial", Model);
                    }
                </div>

            </div>
        </div>
    </div>

    @section Scripts
    {
    <script src="~/lib/jquery.mask/jquery.mask.min.js"></script>
    <script src="~/js/areas/administracao/pedido/index.js"></script>
    }

}
