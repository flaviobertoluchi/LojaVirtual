@{
    ViewBag.Title = "- Produtos";
}

<div class="container mt-4">
    <div class="row">
        <div class="col p-3 rounded shadow bg-body">

            <h4>Produtos</h4>

            @if (TempData["Sucesso"] is not null)
            {
                <div class="alert alert-success mt-4" role="alert">@TempData["Sucesso"]</div>
            }

            <div class="row mt-4 justify-content-center">

                <div class="col-md-6 col-lg-3 mb-2">
                    <form>
                        <div class="input-group">
                            <input class="form-control pesquisa" type="search" placeholder="Pesquisar">
                            <button class="btn btn-outline-success btn-pesquisar"><i class="fa-solid fa-magnifying-glass"></i></button>
                        </div>
                    </form>
                </div>

                <div class="col-md-6 col-lg-3 mb-2">
                    <input class="form-control qtdPorPagina" placeholder="Quantidade por página">
                </div>

                <div class="col-md-6 col-lg-3 mb-2">
                    <vc:catalogo-categorias></vc:catalogo-categorias>
                </div>

                <div class="col-md-6 col-lg-3 mb-2">
                    <select class="form-select ordem">
                        <option value="" selected disabled>Ordenar por</option>
                        <option value="0">Id</option>
                        <option value="1">Categoria</option>
                        <option value="2">Nome</option>
                        <option value="3">Estoque</option>
                        <option value="4">Preço</option>
                    </select>
                </div>

                <div class="col col-sm-4 col-md-3 col-lg-2 mt-2">
                    <div class="form-check form-switch">
                        <input class="form-check-input desc" type="checkbox" id="desc">
                        <label class="form-check-label" for="desc">Inverter</label>
                    </div>
                </div>

                <div class="col col-sm-4 col-md-3 col-lg-2 mt-2">
                    <div class="form-check">
                        <input class="form-check-input semEstoque" type="checkbox" id="semEstoque">
                        <label class="form-check-label" for="semEstoque">Sem Estoque</label>
                    </div>
                </div>

            </div>

            <div class="paginacao">
                <vc:produto-paginacao></vc:produto-paginacao>
            </div>

        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/jquery.mask/jquery.mask.min.js"></script>
    <script src="~/js/areas/administracao/produto/index.js"></script>
}
