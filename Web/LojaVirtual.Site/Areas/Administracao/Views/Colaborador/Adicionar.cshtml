@inject LojaVirtual.Site.Extensions.Sessao sessao
@{
    var colaboradorToken = sessao.ObterColaboradorToken();
}

@model ColaboradorViewModel
@{
    ViewBag.Title = "- Cadastrar";
}

@if (colaboradorToken is not null && colaboradorToken.Permissao.AdicionarColaborador)
{
    <div class="container mt-4">

        <div class="row justify-content-center">
            <div class="col-lg-10 p-3 rounded shadow bg-body">

                <a class="btn btn-outline-secondary float-end" asp-area="Administracao" asp-controller="Colaborador" asp-action="Index">
                    <i class="fa-solid fa-square-up-right"></i> Voltar
                </a>

                <h3 class="mb-3">Cadastrar</h3>

                <form method="post">

                    @if (ViewBag.Mensagem is not null)
                    {
                        <div class="alert alert-danger" role="alert">@ViewBag.Mensagem</div>
                    }

                    <div class="row mb-3">

                        <div class="col-md">

                            <h5 class="mb-3">Dados</h5>

                            <div class="mb-3">
                                <label asp-for="Usuario" class="form-label"></label>
                                <input asp-for="Usuario" class="form-control">
                                <span asp-validation-for="Usuario" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Senha" class="form-label"></label>
                                <input asp-for="Senha" class="form-control" type="password">
                                <span asp-validation-for="Senha" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ConfirmarSenha" class="form-label"></label>
                                <input asp-for="ConfirmarSenha" class="form-control" type="password">
                                <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Nome" class="form-label"></label>
                                <input asp-for="Nome" class="form-control">
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Sobrenome" class="form-label"></label>
                                <input asp-for="Sobrenome" class="form-control">
                                <span asp-validation-for="Sobrenome" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="col-md">

                            <h5 class="mb-3">Permissões</h5>

                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    @if (Model.Permissao.VisualizarColaborador &&
                                   Model.Permissao.AdicionarColaborador &&
                                   Model.Permissao.EditarColaborador &&
                                   Model.Permissao.ExcluirColaborador &&
                                   Model.Permissao.VisualizarCliente &&
                                   Model.Permissao.VisualizarCategoria &&
                                   Model.Permissao.AdicionarCategoria &&
                                   Model.Permissao.EditarCategoria &&
                                   Model.Permissao.ExcluirCategoria &&
                                   Model.Permissao.VisualizarProduto &&
                                   Model.Permissao.AdicionarProduto &&
                                   Model.Permissao.EditarProduto &&
                                   Model.Permissao.ExcluirProduto &&
                                   Model.Permissao.VisualizarPedido &&
                                   Model.Permissao.AdicionarSituacaoPedido)
                                    {
                                        <input class="form-check-input" type="checkbox" id="todas" checked>
                                    }
                                    else
                                    {
                                        <input class="form-check-input" type="checkbox" id="todas">
                                    }
                                    <label class="form-check-label" for="todas">Todas</label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input permissao" type="checkbox" asp-for="Permissao.VisualizarColaborador">
                                    <label class="form-check-label" asp-for="Permissao.VisualizarColaborador"></label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input permissao" type="checkbox" asp-for="Permissao.AdicionarColaborador">
                                    <label class="form-check-label" asp-for="Permissao.AdicionarColaborador"></label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input permissao" type="checkbox" asp-for="Permissao.EditarColaborador">
                                    <label class="form-check-label" asp-for="Permissao.EditarColaborador"></label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input permissao" type="checkbox" asp-for="Permissao.ExcluirColaborador">
                                    <label class="form-check-label" asp-for="Permissao.ExcluirColaborador"></label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input permissao" type="checkbox" asp-for="Permissao.VisualizarCliente">
                                    <label class="form-check-label" asp-for="Permissao.VisualizarCliente"></label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input permissao" type="checkbox" asp-for="Permissao.VisualizarCategoria">
                                    <label class="form-check-label" asp-for="Permissao.VisualizarCategoria"></label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input permissao" type="checkbox" asp-for="Permissao.AdicionarCategoria">
                                    <label class="form-check-label" asp-for="Permissao.AdicionarCategoria"></label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input permissao" type="checkbox" asp-for="Permissao.EditarCategoria">
                                    <label class="form-check-label" asp-for="Permissao.EditarCategoria"></label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input permissao" type="checkbox" asp-for="Permissao.ExcluirCategoria">
                                    <label class="form-check-label" asp-for="Permissao.ExcluirCategoria"></label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input permissao" type="checkbox" asp-for="Permissao.VisualizarProduto">
                                    <label class="form-check-label" asp-for="Permissao.VisualizarProduto"></label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input permissao" type="checkbox" asp-for="Permissao.AdicionarProduto">
                                    <label class="form-check-label" asp-for="Permissao.AdicionarProduto"></label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input permissao" type="checkbox" asp-for="Permissao.EditarProduto">
                                    <label class="form-check-label" asp-for="Permissao.EditarProduto"></label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input permissao" type="checkbox" asp-for="Permissao.ExcluirProduto">
                                    <label class="form-check-label" asp-for="Permissao.ExcluirProduto"></label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input permissao" type="checkbox" asp-for="Permissao.VisualizarPedido">
                                    <label class="form-check-label" asp-for="Permissao.VisualizarPedido"></label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input permissao" type="checkbox" asp-for="Permissao.AdicionarSituacaoPedido">
                                    <label class="form-check-label" asp-for="Permissao.AdicionarSituacaoPedido"></label>
                                </div>
                            </div>
                        </div>

                    </div>

                    <button type="submit" class="btn btn-outline-primary" asp-area="Administracao" asp-controller="Colaborador" asp-action="Adicionar">
                        <i class="fa-solid fa-floppy-disk"></i> Adicionar
                    </button>

                </form>

            </div>
        </div>
    </div>

    @section Scripts
    {
    <partial name="_ValidationScriptsPartial">
        <script src="~/js/areas/administracao/colaborador/adicionar.js"></script>
    }
}
