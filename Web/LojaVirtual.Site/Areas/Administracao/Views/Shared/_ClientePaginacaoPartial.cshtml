@inject LojaVirtual.Site.Extensions.Sessao sessao
@{
    var colaboradorToken = sessao.ObterColaboradorToken();
}

@model Paginacao<ClienteViewModel>

@if (colaboradorToken is not null && colaboradorToken.Permissao.VisualizarCliente)
{
    <div class="table-responsive">
        <table class="table table-hover">

            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Usuário</th>
                    <th scope="col">CPF</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Sobrenome</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">

                @if (Model?.Data.Count > 0)
                {
                    foreach (var item in Model.Data)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Usuario</td>
                            <td>@item.Cpf</td>
                            <td>@item.Nome</td>
                            <td>@item.Sobrenome</td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>

    <partial name="_PaginacaoPartial" />

}
