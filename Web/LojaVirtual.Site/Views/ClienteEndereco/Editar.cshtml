@model EnderecoViewModel
@{
    ViewBag.Title = "- Endereço Editar";
}

<div class="container mt-4">

    <div class="row justify-content-center">
        <div class="col p-3 rounded shadow bg-body">
            <div class="row">
                <div class="col-md-3 col-xl-2 mb-4">
                    <partial name="_ClienteMenuPartial" />
                </div>
                <div class="col-md-9 col-xl-10">

                    <a class="btn btn-outline-secondary float-end" asp-area="" asp-controller="ClienteEndereco" asp-action="Index">
                        <i class="fa-solid fa-square-up-right"></i> Voltar
                    </a>

                    <h3 class="mb-3">Editar endereço</h3>

                    <form method="post">

                        @if (ViewBag.Mensagem is not null)
                        {
                            <div class="alert alert-danger" role="alert">@ViewBag.Mensagem</div>
                        }
                        @if (TempData["Mensagem"] is not null)
                        {
                            <div class="alert alert-danger" role="alert">@TempData["Mensagem"]</div>
                        }

                        <input hidden readonly asp-for="Id" />
                        <input hidden readonly asp-for="ClienteId" />

                        <div class="row mb-3">
                            <div class="col-md">

                                <div class="mb-3">
                                    <label asp-for="EnderecoNome" class="form-label"></label>
                                    <input asp-for="EnderecoNome" class="form-control" placeholder="Ex: Casa, trabalho, etc.">
                                    <span asp-validation-for="EnderecoNome" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Cep" class="form-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Cep" class="form-control postalcodeBR">
                                        <button id="pesquisarCep" class="btn btn-outline-success" data-bs-toggle="popover" data-bs-content="CEP não encontrado.">
                                            <i class="fa-solid fa-magnifying-glass"></i> Pesquisar
                                        </button>
                                    </div>
                                    <span asp-validation-for="Cep" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Bairro" class="form-label"></label>
                                    <input asp-for="Bairro" class="form-control">
                                    <span asp-validation-for="Bairro" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Cidade" class="form-label"></label>
                                    <input asp-for="Cidade" class="form-control">
                                    <span asp-validation-for="Cidade" class="text-danger"></span>
                                </div>

                            </div>

                            <div class="col-md">

                                <div class="mb-3">
                                    <label asp-for="Logradouro" class="form-label"></label>
                                    <input asp-for="Logradouro" class="form-control" placeholder="Rua, Av.">
                                    <span asp-validation-for="Logradouro" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Numero" class="form-label"></label>
                                    <input asp-for="Numero" class="form-control">
                                    <span asp-validation-for="Numero" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Complemento" class="form-label"></label>
                                    <input asp-for="Complemento" class="form-control" placeholder="Bloco, Apto.">
                                    <span asp-validation-for="Complemento" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Uf" class="form-label"></label>
                                    <input asp-for="Uf" class="form-control">
                                    <span asp-validation-for="Uf" class="text-danger"></span>
                                </div>

                            </div>
                        </div>

                        <button type="submit" class="btn btn-outline-primary me-1" asp-area="" asp-controller="ClienteEndereco" asp-action="Editar">
                            <i class="fa-solid fa-floppy-disk"></i> Salvar
                        </button>

                        <a class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#excluirModal">
                            <i class="fa-solid fa-trash"></i> Excluir
                        </a>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>


<div id="excluirModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title h5">Excluir - @Model?.EnderecoNome</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir o endereço <span class="fw-bold">@Model?.EnderecoNome</span>?</p>
            </div>
            <div class="modal-footer">
                <a class="btn btn-outline-danger" asp-area="" asp-controller="ClienteEndereco" asp-action="Excluir" asp-route-id="@Model?.Id">
                    <i class="fa-solid fa-trash"></i> Excluir
                </a>
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="fa-solid fa-xmark"></i> Fechar
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial">
        <script src="~/lib/jquery.mask/jquery.mask.min.js"></script>
        <script src="~/js/cliente_endereco/editar.js"></script>
}
